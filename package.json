{
  "name": "chatorbit-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "lint": "eslint \"{client,server}/**/*.{js,jsx}\"",
    "lint:fix": "eslint \"{client,server}/**/*.{js,jsx}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:server": "NODE_OPTIONS=--experimental-vm-modules jest -c jest.server.config.js --runInBand",
    "test:client": "NODE_OPTIONS=--experimental-vm-modules jest -c jest.client.config.js --runInBand",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "i": "^0.3.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "npm": "^11.5.2",
    "prettier": "^3.6.2"
  }
}
