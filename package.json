{
  "name": "chatorbit-monorepo",
  "private": true,
  "workspaces": ["client", "server"],
  "scripts": {
    "test": "npm run -w client test && npm run -w server test",
    "test:server": "npm run -w server test",
    "test:client": "npm run -w client test",
    "test:watch": "npm run -w server test:server:watch",
    "coverage": "npm run -w server coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "postinstall": "npm run -w server prisma:generate || true"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@playwright/test": "^1.47.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "npm": "^11.5.2"
  }
}
