{
  "name": "chatorbit-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "test": "npm run -w client test && npm run -w server test",
    "test:server": "npm run -w server test",
    "test:client": "npm run -w client test",
    "test:watch": "npm run -w server test:server:watch",
    "coverage": "npm run -w server coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "postinstall": "npm run -w server prisma:generate || true"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^8.2.5",
    "@mantine/hooks": "^8.2.5",
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "14.2.2",
    "artillery": "^2.0.24",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "express-list-endpoints": "^7.1.1",
    "i": "^0.3.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "npm": "^11.5.2",
    "prettier": "^3.6.2",
    "react-router-dom": "^7.8.1"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@tabler/icons-react": {
      "react": "18.3.1"
    },
    "@testing-library/react": {
      "react": "18.3.1",
      "react-dom": "18.3.1"
    },
    "emoji-picker-react": {
      "react": "18.3.1"
    },
    "react-qr-code": {
      "react": "18.3.1"
    }
  }
}
