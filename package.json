{
  "name": "chatorbit-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test:server": "NODE_OPTIONS=--experimental-vm-modules jest --config ./server/jest.config.cjs",
    "test:client": "jest --config ./client/jest.config.js",
    "test": "npm run test:server && npm run test:client",
    "test:ci": "npm run test",
    "ci": "npm run lint && npm run format:check && npm run test:ci",
    "typecheck": "echo \"(placeholder) add TS later\"",
    "audit": "npm -w server audit --audit-level=moderate || true && npm -w client audit --audit-level=moderate || true",
    "test:watch": "npm run -w server test:server:watch",
    "coverage": "npm run -w server coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "postinstall": "npm run -w server prisma:generate || true"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@google-cloud/translate": "^9.2.0",
    "@playwright/test": "^1.47.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "npm": "^11.5.2",
    "prettier": "^3.6.2"
  }
}
