{
  "name": "chatforia-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env DOTENV_CONFIG_PATH=.env node -r dotenv/config bootstrap.js",
    "start": "cross-env NODE_ENV=production DOTENV_CONFIG_PATH=.env.production node -r dotenv/config bootstrap.js",
    "dev:watch": "cross-env DOTENV_CONFIG_PATH=.env node --watch -r dotenv/config bootstrap.js",
    "pretest": "prisma generate --schema=prisma/schema.prisma",
    "postinstall": "prisma generate --schema=prisma/schema.prisma",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config ./jest.config.cjs",
    "test:server": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config ./jest.config.cjs",
    "test:server:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --watch --config ./jest.config.cjs",
    "test:server:inband": "npm run -w server test:server",
    "coverage": "npm run test:server -- --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --config ./jest.config.cjs",
    "test:int": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config ./jest.config.cjs __tests__/status.int.test.js",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs __tests__",
    "test:contract": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs tests/contract",
    "test:security": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs tests/security",
    "test:perf": "artillery run tests/perf/messages.yml",
    "perf:smoke": "npm run -w chatforia-server start:mini & sleep 2 && npm run -w chatforia-server test:perf -- --target http://localhost:3000",
    "deps:check": "npm outdated || true",
    "audit": "npm audit || true",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "seed:languages": "node prisma/seedLanguages.js"
  },
  "prisma": {
    "seed": "node prisma/seedTranslations.js"
  },
  "_moduleAliases": {
    "@utils": "./utils",
    "@sms": "./utils/sms.js",
    "@prismaClient": "./utils/prismaClient.js",
    "@middleware": "./middleware",
    "@routes": "./routes",
    "@api": "./api"
  },
